@model Students

@{
    ViewData["Title"] = "Students Data";
}
<script src="https://kit.fontawesome.com/16bd784e77.js" crossorigin="anonymous"></script>
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class=" animate__animated animate__rotateInDownRight">Student´s Data</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="@ViewBag.State">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <i class="fas fa-user-tag"></i>
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-user-tie"></i>
                        <label asp-for="FirstMidName" class="control-label"></label>
                        <input asp-for="FirstMidName" class="form-control" />
                        <span asp-validation-for="FirstMidName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-calendar-alt"></i>
                        <label asp-for="EnrollmentsDate" class="control-label"></label>
                        <input asp-for="EnrollmentsDate" class="form-control" />
                        <span asp-validation-for="EnrollmentsDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="MostrarAlumnos">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
